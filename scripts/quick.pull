#!/usr/local/bin/bash

while IFS= read -r folder; do

    [[ -d "$folder/.git" ]] && (
        cd "$folder" || {
        echo "  ❌ Skipping the folder $folder"
        exit
        }

        echo "  ✅  Pulling out the changes..."
        git pull
    ) 
 
done < <(find .  -type d ! -path "*/Library/*")
